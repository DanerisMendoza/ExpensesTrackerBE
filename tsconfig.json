{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // "strict": true
    "baseUrl": "./",
    "paths": {
      "@api/*": ["api/*"], // Replace `@utils` with your alias
    }
  },
  "include": ["api/**/*"]
}
