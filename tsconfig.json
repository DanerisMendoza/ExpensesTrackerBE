{
  "require": ["tsconfig-paths/register"],
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["api/*"],
    },
    "strict": true
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules"]
}
